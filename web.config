<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="Python FastCGI"
           path="*"
           verb="*"
           modules="FastCgiModule"
           resourceType="Unspecified"
           requireAccess="Script" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="Django Application" stopProcessing="true">
          <match url="(.*)" ignoreCase="false" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="handler.fcgi/{R:1}" appendQueryString="true" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
  <appSettings>
    <!-- ConfiguraciÃ³n para Django - RUTAS DEL SERVIDOR -->
    <add key="WSGI_HANDLER" value="inventario_sistema.wsgi.application" />
    <add key="PYTHONPATH" value="C:\inventario_sistema" />
    <add key="DJANGO_SETTINGS_MODULE" value="inventario_sistema.settings" />
    <!-- Configuraciones adicionales para IIS -->
    <add key="WSGI_RESTART_FILE_REGEX" value="" />
    <add key="PYTHONDONTWRITEBYTECODE" value="1" />
    <add key="PYTHONUNBUFFERED" value="1" />
  </appSettings>
</configuration>
